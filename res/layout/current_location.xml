<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <Spinner
        android:id="@+id/spinner_current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />
    

     <EditText
        android:id="@+id/post_current"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="compose"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="2000"
        android:maxLines="4"
        android:layout_alignBottom="@id/spinner_current"
        android:layout_marginTop="7dp"
        />
     
     <CheckBox
        android:id="@+id/current_promote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="promote"
        android:checked="true"
        android:layout_alignBottom="@id/post_current"
        android:layout_marginTop="7dp"
        />
     
     <Button
        android:id="@+id/post_current_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:text="Post"
        android:layout_alignBottom="@id/post_current"
        android:textSize="22sp"
        android:layout_marginTop="7dp"
        />
</LinearLayout>