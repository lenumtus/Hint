<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">

         
       
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/login_back_ground"
        android:gravity="center"
        android:orientation="vertical" >

        <!-- View Title Label -->
        <!-- Name Label -->

        <!-- <Button
            android:id="@+id/currentlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="current"
            android:textColor="#21dbd4"
            android:textStyle="bold" />-->

        <!-- Name TextField -->

        <RadioGroup
            android:id="@+id/radiolocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radiocurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current" />

            <RadioButton
                android:id="@+id/radiohome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Homelocation" />
        </RadioGroup>

        <Spinner
            android:id="@+id/spinnercategory"
            android:layout_width="148dp"
            android:layout_height="34dp" />

<LinearLayout
    android:id="@+id/searchlocation"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

       <ProgressBar
              style="?android:attr/progressBarStyle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />

        <TextView
             android:id="@+id/progresstest"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:text="Searching Data..." />
   </LinearLayout>
       
          <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Area" />

          <EditText
              android:id="@+id/location"
              android:layout_width="242dp"
              android:layout_height="wrap_content"
              android:ems="10" >

              <requestFocus />
          </EditText>
        
        <!-- Email Label -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Title" />
        <!-- Email TextField -->

        <EditText
            android:id="@+id/titlepost"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <!-- Password Label -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Enter your post" />
        <!-- Password TextField -->
             <ImageView
        android:id="@+id/imagepost"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true" />
        <EditText
            android:id="@+id/post"
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:lines="5" />

        <!-- Error message -->

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_marginTop="20dip"
            android:text="send post" />

         
        <TextView
            android:id="@+id/register_error"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:textColor="#e30000"
            android:textStyle="bold" />

        <!-- Login Button -->


        <!-- Link to Login Screen -->


    </LinearLayout>
    
</RelativeLayout>