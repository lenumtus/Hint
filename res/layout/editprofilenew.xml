<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
   xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
   android:fillViewport="true">
    
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:id="@+id/releTive"
	    android:layout_height="wrap_content"
	    android:background="@drawable/welcome" >
    
   <LinearLayout
       android:id="@+id/barL"
       android:layout_width="wrap_content"
       android:layout_height="80dp"
       android:layout_alignParentLeft="true"
       android:layout_alignParentRight="true"
       android:layout_alignParentTop="true"
       android:background="#E5E9EC"
       android:orientation="horizontal" >
       
        <TextView
            android:id="@+id/ed"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/edit"
            android:textColor="#0040FF" />

        <ImageView
            android:id="@+id/imgL"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:paddingBottom="16dp"
            android:paddingLeft="80dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/logo" />

    </LinearLayout>
    
   <FrameLayout 
        android:id="@+id/fram"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:background="@drawable/welcome"
        android:layout_below="@+id/barL">
      
              
        <View
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:layout_marginTop="2dp"
		    android:paddingLeft="13dp"
		    android:background="#A3B4BC" />
        
        <TextView
              android:id="@+id/fullname"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="25dp"
              android:gravity="center"
              android:paddingRight="25dp"
              android:text="@string/details"
              android:textColor="#6E6E6E" />
        
        
        <TextView
              android:id="@+id/first"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
            
              android:layout_marginTop="60dp"
              android:paddingLeft="35dp"
              android:text="@string/fLine"
              android:textColor="#6E6E6E" />
        
        <TextView
              android:id="@+id/first2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
            
              android:layout_marginTop="80dp"
              android:paddingLeft="35dp"
              android:text="@string/phone"
              android:textColor="#6E6E6E" />
        
        <TextView
              android:id="@+id/first3"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
            
              android:layout_marginTop="100dp"
              android:paddingLeft="35dp"
              android:text="@string/g"
              android:textColor="#6E6E6E" />
        
        <TextView
              android:id="@+id/first4"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
            
              android:layout_marginTop="120dp"
              android:paddingLeft="35dp"
              android:text="@string/loc"
              android:textColor="#6E6E6E" />
      
        <View
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:layout_marginTop="145dp"
		    android:paddingLeft="13dp"
		    android:background="#A3B4BC" />
       
        <TextView
              android:id="@+id/update2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:layout_marginTop="160dp"
              android:paddingLeft="13dp"
              android:text="@string/lineUpdate"
              android:textColor="#6E6E6E" />
        
        <LinearLayout
            android:id="@+id/lH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="180dp">
            
            
             <com.example.community_list_post.library.BootstrapEditText
              android:id="@+id/address"
              android:layout_width="230dp"
              android:layout_height="wrap_content"
              bootstrapbutton:be_roundedCorners="true"
              android:layout_margin="13dp"
              android:layout_marginRight="65dp"
              android:layout_marginBottom="16dp"
              android:drawableLeft="@drawable/home"
              android:drawablePadding="13dp"
              android:ems="10"
              android:hint="@string/hl"    />
          

            <ImageButton
                android:id="@+id/getadress"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginTop="2dp"
                
                android:background="?android:selectableItemBackground"
                android:src="@drawable/location" />
            
        </LinearLayout> 
        
        <View
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:layout_marginTop="238dp"
		    android:paddingLeft="13dp"
		    android:background="#80CCFF" />
        
        <com.example.community_list_post.library.BootstrapButton
	          android:id="@+id/signUp"
	          android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	          android:layout_marginTop="258dp"
	          android:layout_marginLeft="13dp"
              android:layout_marginRight="13dp"
              android:layout_marginBottom="25dp"
	          android:text="@string/manage"
	          bootstrapbutton:bb_roundedCorners="true"
	          bootstrapbutton:bb_type="success" >
	
	      </com.example.community_list_post.library.BootstrapButton>
            
            
     <LinearLayout
            style="?android:buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingBottom="1dp"
            android:layout_gravity="bottom"
            android:background="#B0BFC6"
            android:gravity="bottom" >
        
            

            <ImageButton
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/camera" />


            <TextView
                android:id="@+id/txtText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:textColor="#FA5858"
                android:text="@string/up" />

        </LinearLayout>
        
        
    </FrameLayout>
    
        
</RelativeLayout>
</ScrollView>
